@using Invetker.Models
@model LoginViewModel

<div class="tab-pane fade show active" id="sign-in" role="tabpanel" aria-labelledby="sign-in" tabindex="0">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { name = "login", role = "form", @class = "mt-3 needs-validation", novalidate = "true" }))
    {
        <div class="px-4">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "form-label required" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "true" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label required" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "true" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="mb-3">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
        <div class="modal-footer px-4">
            <input type="hidden" name="ReturnUrl" value="/Dashboard" />
            <input type="button" value="Close" class="btn btn-outline-secondary" data-bs-dismiss="modal" />
            <input type="submit" value="Sign In" class="btn btn-warning text-light" />
        </div>
    }
</div>
