<div class="tab-pane fade show active" id="sign-in" role="tabpanel" aria-labelledby="sign-in" tabindex="0">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { name = "login", role = "form", @class = "mt-3 needs-validation", novalidate = "true" }))
    {
        <div class="px-4">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="model-sign-in-email" class="form-label required">Email</label>
                <input type="email" class="form-control" id="model-sign-in-email" name="Email" required>
            </div>
            <div class="mb-3">
                <label for="model-sign-in-password" class="form-label required">Password</label>
                <input type="password" class="form-control" id="model-sign-in-password" name="Password" required>
            </div>
        </div>
        <div class="modal-footer px-4">
            <input type="hidden" name="ReturnUrl" value="/Dashboard" />
            <input type="button" value="Close" class="btn btn-outline-secondary" data-bs-dismiss="modal" />
            <input type="submit" value="Sign In" class="btn btn-warning text-light" />
        </div>
    }
</div>